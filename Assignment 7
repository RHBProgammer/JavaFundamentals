        lblAverage.setText("");
        lblMaximum.setText("");
        lblMinimum.setText("");
    }                                        

    private void btnEnterActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        //declarations of variables
        int Marks[] = new int[21];
        int Max = 0;
        int Min = 101;
        double Avg;
        String input;
        
        int n = 0;
        int result = 0;
        
        for (n = 0; n < Marks.length; n++){
            input = JOptionPane.showInputDialog("Please enter student mark: ");
            Marks[n] = Integer.parseInt(input);
            result = result + Marks[n];
            
        if (Marks[n] > Max) {
            Max = Marks[n];
            lblMaximum.setText("Highest final mark: " + String.valueOf(Max));
        } else if(Marks[n] < Min) {
            Min = Marks[n];
            lblMinimum.setText("Lowest final mark: " + String.valueOf(Min));
        } else {
        Avg = result/Marks.length;
        lblAverage.setText("Average mark: " + String.valueOf(Avg));
        }
      }  
    }                                        

