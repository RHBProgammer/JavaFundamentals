    private void btnCalculateActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        
        //Declarations as part of class
        Influenza Flu = new Influenza();
        Cancer Treatments = new Cancer();
        
        //Declarations
        double ConsultationFee = (Double.parseDouble(txtConsultation.getText()));
        double ScanFee = (Double.parseDouble(txtConsultation.getText()));
        
        //If statement for Cancer
        if (radCancer.isSelected() && (ScanFee > 600)){
            String ApologyMessage;
            ApologyMessage = "Sorry we cannot treat you";
            lblAmountPaid.setText(ApologyMessage);
        } else if (radCancer.isSelected() && (ScanFee < 600)){
            double CancerResults = Treatments.AmountPaidForTreamentCancer(ScanFee);
            lblAmountPaid.setText(String.valueOf("R " + CancerResults));
        }
        
        //If Statement for Flu
        if (radFlu.isSelected() && (ScanFee > 600)){
            double FluResults = Flu.AmountPaidForTreatmentFluDiscount(ConsultationFee);
            lblAmountPaid.setText(String.valueOf("R " + FluResults));
        } else if (radFlu.isSelected() && (ScanFee < 600)){
            double FluResults = Flu.AmountPaidForTreatmentFlu(ConsultationFee);
            lblAmountPaid.setText(String.valueOf("R " + FluResults));
        }
    }                                            

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
       txtSicknessCode.setText("");
       txtDocPracNum.setText("");
       txtDuration.setText("");
       txtConsultation.setText("");
       lblAmountPaid.setText("");
       
    }                                        

