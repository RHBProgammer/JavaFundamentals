    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
       //Clear textfields
        txtTitle.setText("");
        txtISBN.setText("");
        txtAuthor.setText("");
        txtPublisher.setText("");
        lblTitle.setText("");
        lblISBN.setText("");
        txtCostPrice.setText("");
        lblSellingPrice.setText("");
    }                                        

    private void btnDetermanSellingPriceActionPerformed(java.awt.event.ActionEvent evt) {                                                        
        // TODO add your handling code here:
        // Try catch in which notifys user to enter all data
        try {
             //Declaring of the initialise variables
        Fiction BooksF = new Fiction();
        Education Edu = new Education();
        
       
        //Explicit conversion
        String Title = (String.valueOf(txtTitle.getText()));
        String ISBN = (String.valueOf(txtISBN.getText()));
        int Price1 = (Integer.parseInt(txtCostPrice.getText()));
        
        
        // Checks if checkbox has been checked and whether combox is set to 5% = true
        if (chckEducationalBook.isSelected() == true & (cmbDiscountRate.getSelectedItem()== "5%"))
                {
                    //Calling of the initialise variable
            double PriceA = Edu.CalcSellingPriceDiscount1(Price1);
            // Display output in labels
            lblTitle.setText(Title);
            lblISBN.setText(ISBN);
            lblSellingPrice.setText("R" + " " + String.valueOf(PriceA)+ "" + "0");
            
        } 
        else if (chckEducationalBook.isSelected() == true & (cmbDiscountRate.getSelectedItem()== "10%"))
                {
                //Calling of the initialise variable
           double PriceB = Edu.CalcSellingPriceDiscount2(Price1);
             // Display output in labels
           lblTitle.setText(Title);
           lblISBN.setText(ISBN);
           lblSellingPrice.setText("R" + " " + String.valueOf(PriceB) + "" + "0" );
        }
        else
        {
            //Calling of the initialise variable
            double PriceC = BooksF.CalcSellingPrice(Price1);
            // Display output in labels
            lblTitle.setText(Title);
            lblISBN.setText(ISBN);
            lblSellingPrice.setText("R" + " " + String.valueOf(PriceC) + "" + "0" );
        }
        }
        catch (Exception err)
                {
                    //Error message
    JOptionPane.showMessageDialog(rootPane, "Please enter all the data");
    }
        
    }                                                       

